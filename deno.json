{
  "name": "events-ts",
  "exports": "./src/event-target.ts",
  "exclude": ["gate/**"],
  "tasks": {
    "format": "deno fmt",
    "lint": "deno check --all ./src && deno fmt --check && cd gate && deno check --all",
    "test": "deno test",
    "test-coverage": "deno test --coverage=.coverage",
    "coverage-report": "deno coverage .coverage --html",
    "coverage-check": "cd gate && ./coverage.ts 95 ../.coverage/html/index.html"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.17"
  },
  "fmt": {
    "exclude": ["./coverage", "static/"],
    "useTabs": false,
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "always"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unversioned-import"],
      "include": []
    }
  }
}
